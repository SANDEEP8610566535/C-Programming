#include <stdio.h>

int main()
{
    int i=5;
    for(int row=0;row<i;row++)
    {
        for(int c=0;c<i-row-1;c++)
        {
            printf(" ");
        }
        for(int k=0;k<i;k++)
        {
            printf("* ");
        }
        printf("\n");
    }
}
output :
    * * * * * 
   * * * * * 
  * * * * * 
 * * * * * 
* * * * * 
